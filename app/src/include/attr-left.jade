.product-info
	.attributes.left
		div(itemprop='offers', itemscope='', itemtype='http://schema.org/Offer')
			.price
				span.fs24
				span.pr
					span(itemprop='price') 2490
				span(itemprop='priceCurrency', style='display: none') RUB
				span.rub р
				br
